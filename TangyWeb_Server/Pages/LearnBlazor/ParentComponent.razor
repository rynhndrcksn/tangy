@page "/learnBlazor/ParentComponent"

<h3>Parent/Child Relation</h3>
<CascadingValue Value="@MessageForGrandChild" Name="message"> <!-- This passes the value to the _GrandChildComponent -->
    <CascadingValue Value="LuckyNum" Name="luckyNum">
        <_ChildComponent OnButtonClick="ShowMessage" Title="This title is passed as a parameter from the parent component">
            Render fragment from parent component!
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>

<p>@MessageText</p>

@* <_ChildComponent Title="This title is a second call"> *@
@*     <ChildContent>A second way to render fragments!</ChildContent> *@
@*     <DangerChildContent>Danger content from render fragment!</DangerChildContent> *@
@* </_ChildComponent> *@

<_AnotherChildComponent placeholder="Placeholder from parent">
</_AnotherChildComponent>

@code {
    public string MessageText = "Click the button";
    public string MessageForGrandChild { get; set; } = "Message from GrandParent";
    public int LuckyNum { get; set; } = 7;

    private void ShowMessage()
    {
        MessageText = "Child component button clicked.";
    }
}