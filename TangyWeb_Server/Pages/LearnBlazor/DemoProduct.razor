@page "/learnblazor/DemoProduct"
<h2>DemoProduct</h2>

<div class="border container">
    <div class="row d-flex justify-content-evenly">
        @foreach (var prod in _products)
        {
            <div class="bg-light border col-md-4">
                <h3>@prod.Name</h3>
                <p>ID: @prod.Id</p>
                <p>Show Properties: <input type="checkbox" @bind="prod.IsActive"/></p>
                @if (prod.IsActive)
                {
                    @foreach (var prodProp in prod.ProductProps)
                    {
                        <p>@prodProp.Key - @prodProp.Value</p>
                    }
                }
                <input type="button" class="btn btn-primary" value="Edit"/>
                <input type="button" class="btn btn-danger" value="Delete"/>
            </div>
        }
    </div>
</div>

@code {
    List<Demo_Product> _products = new();
    
    protected override void OnInitialized()
    {
        _products.Add(new Demo_Product
        {
            Id = 1,
            Name = "Midnight Blaze",
            Price = 4.99,
            IsActive = false,
            ProductProps = new List<Demo_ProductProp>
            {
                new() {Id = 1, Key = "Flavor", Value = "Rose"},
                new() {Id = 2, Key = "Size", Value = "20oz"},
                new() {Id = 3, Key = "Color", Value = "Purple"}
            }
        });
        _products.Add(new Demo_Product()
        {
            Id = 2,
            Name = "Blossom Lily",
            Price = 9.99,
            IsActive = true,
            ProductProps = new List<Demo_ProductProp>
            {
                new() {Id = 1, Key = "Flavor", Value = "Lily"},
                new() {Id = 2, Key = "Size", Value = "18oz"},
                new() {Id = 3, Key = "Color", Value = "White"}
            }
        });
    }
}